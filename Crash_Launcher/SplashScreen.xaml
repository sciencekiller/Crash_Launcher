<?xml version="1.0" encoding="utf-8"?>
<winuiex:SplashScreen
    x:Class="Crash_Launcher.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiex="using:WinUIEx"
    xmlns:local="using:Crash_Launcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/logo.png" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <ProgressRing Grid.Row="1" HorizontalAlignment="Center" IsIndeterminate="True"/>
        <TextBlock Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" x:Uid="Loading" FontSize="22"/>
    </Grid>
</winuiex:SplashScreen>
